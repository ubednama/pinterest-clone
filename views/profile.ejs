<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="/stylesheets/nav.css">
  </head>
  <body>
    <div class="header">
      <img src="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/pinterest-round-color-icon.png" class="icon pinterest-icon">
      <ul class="navigation">
        <li><a href="/feed" class="nav-link">Home</a></li>
        <li><a href="#" class="nav-link">Explore</a></li>
        <li><a href="#" class="nav-link">Create</a></li>
      </ul>
      <div class="search-bar">
        <img width="50" height="50" src="https://img.icons8.com/ios-filled/50/search--v1.png" alt="search--v1" class="search-icon">
        <input type="text" placeholder="Search">
      </div>
      <div class="nav-icons">
        <img src="https://uxwing.com/wp-content/themes/uxwing/download/communication-chat-call/bell-icon.png" class="icon nav-icon">
        <img src="https://uxwing.com/wp-content/themes/uxwing/download/communication-chat-call/speech-bubble-black-icon.png" class="icon nav-icon">
        <a href="/profile">
          <img height="29px" width="29px" src="https://img.icons8.com/external-tanah-basah-glyph-tanah-basah/48/external-glyph-web-and-seo-tanah-basah-glyph-tanah-basah-53.png" alt="profile" class="profile-icon"></a>
        <img width="24" height="24" src="https://img.icons8.com/material-outlined/24/expand-arrow--v1.png" alt="expand-arrow--v1" class="icon nav-icon arrow-icon" id="arrowDown">
  
        <!-- Hidden button -->
        <a href="/logout" id="hiddenButton" class="button">Log Out</a>
      </div>
    </div>
    <div id="algn">
        <div id="card-cp">
            <div id="upper-bg">
                <img src="<%= user.dp %>" alt="profile-pic" class="profile-pic">
            </div>
            <div id="lower-bg">
              <div class="text">
                <p class="name"><%= user.fullName %></p>
                <p class="username">@<%= user.username %></p>
                <p class="status"><b>number of followers</b></p>
              </div>
              <div id="btn">
                <button class="msg">Share</button>
                <button class="msg">Edit Profile</button>
              </div>
            </div>
            <div class="action-bar">
                <div class="action-bar2">
                    <button class="createdBtn" onclick="showCreated()">Created</button>
                <button class="savedBtn" onclick="showSaved()">Saved</button>
                </div>
            </div>
        </div>
    </div>
    <div class="bar">
        <img width="25" height="25" src="https://img.icons8.com/external-tanah-basah-glyph-tanah-basah/48/external-filter-design-thinking-tanah-basah-glyph-tanah-basah.png" alt="sort"/>
        <img id="add" width="25" height="25" src="https://img.icons8.com/ios-glyphs/30/plus-math.png" alt="add collection"/>
    </div>
    <div class="saved" style="display: flex;">
        <div class="card" style="width: 18rem;">
            <img src="https://i.pinimg.com/236x/2a/04/dd/2a04dd3fc48589d8844b382be518736d.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-title">Men's Fashion.</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="https://i.pinimg.com/236x/22/fa/dd/22faddb1195b9f2839f4ed0e14d8814c.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-title">Saved Fashion.</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="https://i.pinimg.com/236x/98/74/e6/9874e61554bd15dc3f63a1aab99d5d70.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-title">Computer Science.</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="https://i.pinimg.com/236x/a6/1f/b2/a61fb2104a8591f847113912c92be011.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-title">Hairstyles.</p>
            </div>
        </div>
    </div>
    <div class="created" style="display: none;">
      <div class="createdPost">
          <div class="cards flexx">
            <% user.posts.forEach(function(post){ %>
              <div class="card" style="width: 18rem;">
                <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <p class="card-title"><%= post.postText %></p>
                </div>
              </div>
            <% }) %>
          </div>
      </div>
      <div class="createPost">
        <P>Nothing to show...yet! Pins you create will live here.</P>
        <button id="createpin">Create Pin</button>
        <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="text" name="filecaption" placeholder="Add title">
        <input type="file" name="file">
        <input type="submit">
      </form>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="/javascripts/profile.js"></script>
    <script src="/javascripts/nav.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>